<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="Enter a comment" class="form-control">
                </div>
                <div class="form-group">    
                    <input type="text" name="comment[author]" placeholder="Enter your name" class="form-control">
                </div>
                <div class="form-group">    
                    <input type="submit" class="btn btn-lg btn-primary btn-block">
                </div>
            </form>

            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>